<main class="container">
  <h1>Quote editor</h1>
  <p>A blazing fast quote editor built with Hotwire</p>

  <% if user_signed_in? %>
    <%= link_to "View quotes", quotes_path, class: "btn btn--dark" %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "btn btn--dark" %>
  <% end %>
</main>

<div class="container">
    <h1>search</h1>
</div>
<div class="row">
    <div class="col-4">
    <%= form_with url: root_path, html: { class: "quote form"} do |f| %>
        <%= f.text_field :query,
         "data-controller": :search,
         "data-action": "keyup->search#search" %>
    <% end %>

    
    <%= render 'pages/results' %>
    </div>
    <div class="col-8">
        <%= turbo_frame_tag :show_content  %>
    </div>
</div>